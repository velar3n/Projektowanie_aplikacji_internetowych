<!DOCTYPE html>
<html lang="en-US">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Yummy</title>
        <link rel="icon" href="<%= baseUrl19 %>/images/logo_hat.png" type="image/x-icon">
        <link rel="stylesheet" href="<%= baseUrl19 %>/stylesheets/styles.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>


    <body>
        <!-- header with logo + navbar -->
        <%- include('components/navbar', {
            showAddButton: false,
            showEditDelete: true
        }) %>

        <!-- main site -->
        <div class="main">
            <div class="recipe_header">
                <div class="grid">
                    <div class="recipe_image">
                        <img height="1200" loading="lazy" width="1200" src="<%= baseUrl19 %>/images/<%=recipe.photo_path%>">
                    </div>
                    <div class="recipe_titlepart">
                        <p><%= recipe.category %></p>
                        <h1><%= recipe.title %></h1>
                        <p></p>
                        <div class="recipe_details">
                            <div class="recipe_detail_container">
                                <p>TIME</p>
                                <h3><%= recipe.time %></h3>
                                <p>Min</p>
                            </div>
                            <div class="recipe_detail_container">
                                <p>SERVINGS</p>
                                <h3><%= recipe.servings %></h3>
                                <p>Servings</p>
                            </div>
                            <div class="recipe_detail_container">
                                <p>DIFFICULTY</p>
                                <h3><%= recipe.difficulty %></h3>
                                <p></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="recipe_content_container">
                <div class="recipe_grid">
                    <div class="ingredient_list_container">
                        <div class="ingredient_list">
                            <div class="ingredient_title">
                                <h3>Ingredients</h3>
                            </div>
                            <div class="ingredient_box">
                                <ul role="list">
                                    <% (Array.isArray(recipe.ingredients) ? recipe.ingredients : [recipe.ingredients]).forEach(ingredient => { %>
                                        <li><%= ingredient %></li>
                                    <% }) %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="description_container">
                        <div class="description_list">
                            <h3>How to</h3>
                            <ul role="list">
                                <% (Array.isArray(recipe.instructions) ? recipe.instructions : [recipe.instructions]).forEach(step => { %>
                                    <li><%= step %></li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- footer -->
        <%- include('components/footer') %>

    </body>
</html>